{% with messages = get_flashed_messages(with_categories=True) %}
    {% if messages %}
        <div class="top-right-flash">
            {% for category, message in messages %}
                {% if category == 'success' %}
                    <div class="alert alert-success alert-dismissable fade show" role="alert" id="flash-message">
                {% else %}
                    <div class="alert alert-danger alert-dismissable fade show" role="alert" id="flash-message">
                {% endif %}
                        {{ message }}
                        <div class="top-right-close-button">
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    </div>
            {% endfor %}
        </div>
    {% endif %}
{% endwith %}
