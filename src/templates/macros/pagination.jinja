{% macro render(pagination, endpoint) %}
    <nav aria-label="Page navigation">
        <ul class="pagination">
            {% if pagination.page == 1 %}
                <li class="page-item disabled">
                    <a class="page-link">Anterior</a>
                </li>
            {% else %}
            <li class="page-item">
                <a class="page-link" href="{{ url_for(endpoint, page=pagination.prev().page) }}">Anterior</a>
            </li>
            {% endif %}
            {% for page in pagination.iter_pages() %}
                {% if page %}
                    <li class="page-item">
                        <a class="page-link" href="{{ url_for(endpoint, page=page) }}">{{ page }}</a>
                    </li>
                {% else %}
                    <li class="page-item">...</li>
                {% endif %}
            {% endfor %}
            {% if pagination.has_next %}
                <li class="page-item">
                    <a class="page-link" href="{{ url_for(endpoint, page=pagination.next_num) }}">Siguiente</a>
                </li>
            {% endif %}
        </ul>
    </nav>
{% endmacro %}